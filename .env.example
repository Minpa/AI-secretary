# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database (Railway will provide these automatically)
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_secretary
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_SSL=true

# Redis (Optional - Railway can provide)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# CORS
CORS_ALLOWED_ORIGINS=https://your-app.railway.app,https://your-domain.com

# SMS (Optional for testing)
SMS_PROVIDER=twilio
SMS_API_KEY=your_twilio_sid
SMS_API_SECRET=your_twilio_token

# Email (Optional for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Storage (Optional for testing)
STORAGE_TYPE=s3
STORAGE_BUCKET=ai-secretary-files
STORAGE_ACCESS_KEY=your_access_key
STORAGE_SECRET_KEY=your_secret_key

# LLM (Optional - can disable for testing)
LLM_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b