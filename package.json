{
  "name": "ai-secretary",
  "version": "1.0.0",
  "description": "AI Secretary for Apartment Complex Operations",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r ./tsconfig-paths-bootstrap.js src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:coverage": "jest --coverage",
    "db:migrate": "node scripts/migrate.js",
    "db:rollback": "node scripts/rollback.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "db:migration:create": "node scripts/create-migration.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.0",
    "pg": "^8.11.0",
    "playwright": "^1.36.0",
    "redis": "^4.6.0",
    "twilio": "^4.14.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.4.0",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.0"
  },
  "keywords": [
    "ai",
    "secretary",
    "apartment",
    "operations",
    "korea"
  ],
  "author": "",
  "license": "MIT"
}
